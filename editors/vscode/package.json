{
  "name": "kaizen-lsp",
  "displayName": "Kaizen",
  "description": "Ultra-fast JavaScript/TypeScript static analyzer",
  "version": "0.1.0",
  "publisher": "mpiton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kzn-tools/kaizen"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Kaizen",
      "properties": {
        "kaizen.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the kaizen-lsp binary. If empty, uses 'kaizen-lsp' from PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
